page {
  background-color: #fff;
}

.banner {
  text-align: center;
  height: 100vw;
}

.banner .swiper {
  height: 100%;
}

.banner .img {
  width: 100%;
  height: 100%;
}

.goods-title .channel {
  float: left;
  height: 20px;
}

.goods-title .channel image {
  width: 20px;
  height: 20px;
  margin-right: 3px;
}

.goods-coupon {
  height: 100px;
  color: #000;
}

.goods-coupon .content {
  height: 100%;
  border-radius: 16rpx;
  padding: 30rpx 0 30rpx 80rpx;
}

.goods-coupon .op {
  height: 100%;
  border-radius: 16rpx;
  position: relative;
}

.goods-coupon .op .cu-btn {
  width: 90px;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.goods-coupon .dashed-right::after {
	border-right: 4rpx dashed #ddd;
}

.goods-describe {
  padding-bottom: 58px;
}

.goods-describe .cu-bar {
  min-height: 80rpx;
}

.goods-describe .cu-bar .action:first-child {
  margin-left: 0;
}

.goods-describe image {
  display: flex;
  width: 100%;
}

.goods-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  color: #fff;
  z-index: 99;
  box-shadow:0 4px 16px 0 rgba(0,0,0,.1);
}

.goods-footer.cu-bar.tabbar.shop .action {
  width: 100rpx;
}

.goods-footer button.action {
  background-color: transparent;
}

.goods-footer .btn-group .cu-btn {
  width: 130px;
}

.cu-modal .cu-dialog image {
  width: 750rpx;
  padding: 20rpx 0;
}

.cu-modal .cu-dialog .tips {
  font-size: 24rpx;
  margin-bottom: 20rpx;
}